<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.healthapp.SetTarget">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/ageText"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="Your Age:"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_marginLeft="140dp"

        android:inputType="phone"
        android:layout_alignTop="@+id/ageText"
        android:layout_toRightOf="@+id/ageText"
        android:layout_toEndOf="@+id/ageText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderText"
        android:layout_below="@id/ageText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Gender:"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_marginLeft="100dp"
        android:layout_alignTop="@+id/genderText"
        android:layout_toRightOf="@+id/genderText"
        android:layout_toEndOf="@+id/genderText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heightText"
        android:layout_below="@id/genderText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Height(cm):"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/height"
        android:layout_marginLeft="70dp"
        android:inputType="phone"
        android:layout_alignTop="@+id/heightText"
        android:layout_toRightOf="@+id/heightText"
        android:layout_toEndOf="@+id/heightText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightText"
        android:layout_below="@id/heightText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Weight(kg):"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:layout_marginLeft="75dp"
        android:inputType="phone"
        android:layout_alignTop="@+id/weightText"
        android:layout_toRightOf="@+id/weightText"
        android:layout_toEndOf="@+id/weightText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyActivityText"
        android:layout_below="@id/weightText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Activity:"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dailyActivity"
        android:layout_marginLeft="100dp"
        android:layout_alignTop="@+id/dailyActivityText"
        android:layout_toRightOf="@+id/dailyActivityText"
        android:layout_toEndOf="@+id/dailyActivityText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightTargetText"
        android:layout_below="@id/dailyActivityText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kilos to loose:"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/weightTarget"
        android:layout_marginLeft="100dp"
        android:inputType="phone"
        android:layout_alignTop="@+id/weightTargetText"
        android:layout_toRightOf="@+id/weightTargetText"
        android:layout_toEndOf="@+id/weightTargetText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daysText"
        android:layout_below="@id/weightTargetText"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Days:"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/days"
        android:layout_marginLeft="180dp"
        android:inputType="phone"
        android:layout_alignTop="@+id/daysText"
        android:layout_toRightOf="@+id/daysText"
        android:layout_toEndOf="@+id/daysText"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Calculate"/>




</RelativeLayout>
